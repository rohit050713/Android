        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/arun1"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
        app:civ_border_color="#ff1234"

        />
